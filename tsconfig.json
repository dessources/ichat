{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/hooks/*": ["./src/hooks/*"],
      "@/lib/*": ["./lib/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/mongodb.ts",
    "__tests__/pages/index.tsx",
    "scripts/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./cypress.config.ts",
    "cypress",
    "**/*.cy.tsx",
    "playgrounds"
  ]
}
